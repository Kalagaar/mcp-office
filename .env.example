# Logging
DEBUG=false

# Storage strategy (LOCAL, S3, MINIO, GCS, AZURE)
UPLOAD_STRATEGY=LOCAL
SIGNED_URL_EXPIRES_IN=3600

# --- AWS S3 ---------------------------------------------------------------
# Only required when UPLOAD_STRATEGY=S3
AWS_ACCESS_KEY=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET=

# --- MINIO (S3-compatible) -----------------------------------------------
# Only required when UPLOAD_STRATEGY=MINIO
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=
MINIO_REGION=us-east-1
MINIO_VERIFY_SSL=true
MINIO_PATH_STYLE=true

# --- GOOGLE CLOUD STORAGE -------------------------------------------------
# Only required when UPLOAD_STRATEGY=GCS
GCS_BUCKET=
GCS_CREDENTIALS_PATH=/app/config/gcp-service-account.json

# --- AZURE BLOB STORAGE ---------------------------------------------------
# Only required when UPLOAD_STRATEGY=AZURE
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_CONTAINER=
AZURE_BLOB_ENDPOINT=https://<account>.blob.core.windows.net
